def floyd_warshall(matriz):
    n = len(matriz)
    dist = [fila[:] for fila in matriz]  # Copia la matriz

    for k in range(n):
        for i in range(n):
            for j in range(n):
                dist[i][j] = min(dist[i][j], dist[i][k] + dist[k][j])

    return dist


# Inf representa que no hay conexión
inf = float('inf')
matriz = [
    [0,   5,   inf, 10],
    [inf, 0,   3,   inf],
    [inf, inf, 0,   1],
    [inf, inf, inf, 0]
]

resultado = floyd_warshall(matriz)

print("Matriz de distancias mínimas:")
for fila in resultado:
    print(fila)
